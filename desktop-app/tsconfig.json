{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2022",
		"module": "es2022",
		"baseUrl": ".",
		"typeRoots": [
			"../node_modules/@types"
		],
		"lib": [
			"DOM",
			"ES2022"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/node_modules/**"
	]
}

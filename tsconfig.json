{
	"compileOnSave": false,
	"compilerOptions": {
		"checkJs": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "bundler",
		"experimentalDecorators": true,
		"target": "es2023",
		"typeRoots": [
			"node_modules/@types",
			"./src/typings"
		],
		"lib": [
			"DOM",
			"ES2022",
			"ScriptHost",
			"WebWorker"
		],
		"module": "es2022",
		"baseUrl": "./src",
		"paths": {
			"stream": [
				"../node_modules/readable-stream/readable.js"
			]
		}
	},
	"angularCompilerOptions": {
		"extendedTemplateDiagnostics": true,
		"strictTemplates": true
	}
}

{
	"compileOnSave": false,
	"compilerOptions": {
		"downlevelIteration": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"typeRoots": [
			"node_modules/@types",
			"./src/typings"
		],
		"lib": [
			"DOM"
		],
		"module": "esnext",
		"baseUrl": "./src",
		"paths": {
			"stream": [
				"../node_modules/readable-stream/readable.js"
			]
		}
	},
	"angularCompilerOptions": {
		"strictTemplates": true,
		"extendedTemplateDiagnostics": true
	}
}
